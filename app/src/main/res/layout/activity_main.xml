<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#3DC6C6"
    android:gravity="center">

    <EditText
        android:id="@+id/etResultado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="textEnd"
        android:layout_marginHorizontal="100dp"
        android:hint="0"
        android:textSize="30dp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnLimpiar"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginHorizontal="5dp"
            android:text="AC"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnborrar"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginHorizontal="5dp"
            android:text="DEL"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnPorcentaje"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginHorizontal="5dp"
            android:text="%"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnDivision"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginHorizontal="5dp"
            android:onClick="operatorclick"
            android:text="รท"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnSiete"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginHorizontal="5dp"
            android:onClick="botonPresionado"
            android:text="7"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnOcho"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginHorizontal="5dp"
            android:onClick="botonPresionado"
            android:text="8"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnNueve"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginHorizontal="5dp"
            android:onClick="botonPresionado"
            android:text="9"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnMultiplication"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginHorizontal="5dp"
            android:onClick="operatorclick"
            android:text="ร"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnCuatro"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginHorizontal="5dp"
            android:onClick="botonPresionado"
            android:text="4"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnCinco"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginHorizontal="5dp"
            android:onClick="botonPresionado"
            android:text="5"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnSeis"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginHorizontal="5dp"
            android:onClick="botonPresionado"
            android:text="6"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnSubtracion"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:textColor="@color/black"
            android:layout_marginHorizontal="5dp"
            android:onClick="operatorclick"
            android:text="-"
            android:textSize="25dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:textSize="25dp"
            android:id="@+id/btnUno"
            android:textColor="@color/black"
            android:onClick="botonPresionado"
            android:layout_marginHorizontal="5dp"
            android:text="1" />

        <Button
            android:id="@+id/btnDos"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginHorizontal="5dp"
            android:onClick="botonPresionado"
            android:text="2"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnTres"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginHorizontal="5dp"
            android:onClick="botonPresionado"
            android:text="3"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnAddition"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginHorizontal="5dp"
            android:textColor="@color/black"
            android:onClick="operatorclick"
            android:text="+"
            android:textSize="25dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="390dp"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnCero"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginHorizontal="5dp"
            android:onClick="botonPresionado"
            android:text="0"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnDecimal"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginHorizontal="5dp"
            android:onClick="botonPresionado"
            android:textColor="@color/black"
            android:text="."
            android:textSize="25dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnIgual"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginHorizontal="5dp"
            android:textColor="@color/black"
            android:text="="
            android:textSize="25dp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>